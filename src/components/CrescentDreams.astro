---
const servers = [
    {
        name: "Minecraft Server",
        status: "offline",
        latency: "null"
    },
    {
        name: "Counter Strike: Source Surf Server",
        status: "offline",
        latency: "null"
    },
    {
        name: "Team Fortess 2 Server",
        status: "offline",
        latency: "null"
    },
];
---

<section class="crescent-dreams"> { /* Renamed class */ }
    <div class="header">
        <h2>Crescent Dreams</h2> { /* Changed heading */ }
        <div class="network-info">
            <code>10.0.0.0/24</code>
            <code>87.123.222.0/24</code>
            <code>FCN</code>
        </div>
    </div>
    <div class="server-grid">
        {servers.map(server => (
            <div class="server-card">
                <div class="server-header">
                    <span class={`status-indicator ${server.status}`}></span>
                    <h3>{server.name}</h3>
                </div>
                {server.latency && (
                    <div class="latency">
                        Latency: {server.latency}
                    </div>
                )}
            </div>
        ))}
    </div>
</section>

<style>
    .crescent-dreams { /* Renamed class */
        margin-bottom: 4rem;
    }

    .header {
        margin-bottom: 1.5rem;
    }

    h2 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .network-info {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .network-info code {
        font-family: monospace;
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    .server-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
    }

    .server-card {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 0.5rem;
        padding: 1rem;
    }

    .server-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }

    .server-header h3 {
        font-size: 1rem;
        font-weight: 500;
    }

    .status-indicator {
        width: 8px;
        height: 8px;
        border-radius: 50%;
    }

    .status-indicator.online {
        background: #22c55e;
    }

    .status-indicator.offline {
        background: #ef4444;
    }

    .latency {
        color: var(--text-secondary);
        font-size: 0.8rem;
    }

    @media (max-width: 768px) {
        .server-grid {
            grid-template-columns: 1fr;
        }
    }
</style> 