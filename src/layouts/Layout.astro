---
interface Props {
	title?: string;
}

const { title = "Tenseicho" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Personal website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/ico_32.ico" sizes="32x32">
		<link rel="icon" href="/ico_48.ico" sizes="48x48">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--background: #1a1b1e;
		--text-primary: #ffffff;
		--text-secondary: #a1a1aa;
		--accent: #6d28d9;
		--card-bg: #27272a;
		--border-color: #3f3f46;
	}
	
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	
	html {
		font-family: system-ui, sans-serif;
		background: var(--background);
		color: var(--text-primary);
	}

	body {
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem;
		min-height: 100vh;
	}

	a {
		color: var(--text-primary);
		text-decoration: none;
	}

	a:hover {
		color: var(--accent);
	}
</style>
