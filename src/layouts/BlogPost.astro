---
const { frontmatter } = Astro.props;
import Layout from './Layout.astro';
---

<Layout title={frontmatter.title}>
    <article class="blog-post">
        <header>
            <h1>{frontmatter.title}</h1>
            <div class="post-meta">
                <time datetime={frontmatter.date}>{frontmatter.date}</time>
                <div class="tags">
                    {frontmatter.tags.map((tag: string) => (
                        <span class="tag">{tag}</span>
                    ))}
                </div>
            </div>
        </header>
        <div class="content">
            <slot />
        </div>
    </article>
</Layout>

<style>
    .blog-post {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    header {
        margin-bottom: 2rem;
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .post-meta {
        display: flex;
        gap: 1rem;
        align-items: center;
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    .tags {
        display: flex;
        gap: 0.5rem;
    }

    .tag {
        background: var(--background);
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
        color: var(--text-secondary);
    }

    .content {
        line-height: 1.6;
    }

    .content :global(h2) {
        font-size: 1.75rem;
        margin: 2rem 0 1rem;
    }

    .content :global(p) {
        margin-bottom: 1.25rem;
    }
</style> 